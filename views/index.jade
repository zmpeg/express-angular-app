doctype html
html(ng-app='csvApp')
  head
    meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no")
    link(rel="stylesheet" href="angular-material/angular-material.css")
    link(rel="stylesheet" href="css/app.css")
  body(ng-controller="dataController")
    #app-tabs(ng-cloak)
      md-content
        md-toolbar.md-primary
          h2.md-toolbar-tools CSV Explorer
        md-tabs.md-primary.md-dynamic-height.md-border-bottom
          md-tab(label="Inspect Data")
            md-content.md-padding
              h1.md-display-2 Inspect
              table
                tr(ng-repeat="row in parsedData")
                  td(ng-repeat="cell in row") {{cell}}
          md-tab(label="Modify Data")
            md-content.md-padding
              h1.md-display-2 Modify Data
              p Place CSV formatted text into this box to load your data. I've got you started with some sample data. This could be anything, but in this case it is NOAA weather data about lightning strikes in a certain area.
              md-input-container
                textarea.md-input(ng-model="data")
          md-tab(label="Analyze Data")
            md-content.md-padding
              h1.md-display-2 Analyze
              a(href ng-click="analyze()") Run Analysis
              p Average: {{avg | number : fractionSize}}
    script(src='angular/angular.js')
    script(src='js/papaparse.min.js')
    script(src="/angular-aria/angular-aria.js")
    script(src="/angular-animate/angular-animate.js")
    script(src="/angular-material/angular-material.js")
    script(src='js/app.js')
    script(src='js/controllers.js')
