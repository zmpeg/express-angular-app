doctype html
html(ng-app='csvApp')
  head
    meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no")
    link(rel="stylesheet" href="angular-material/angular-material.css")
  body(ng-controller="dataController")
    #app-tabs(ng-cloak)
      md-content
        md-toolbar.md-primary
          h2.md-toolbar-tools CSV Explorer
        md-tabs.md-primary.md-dynamic-height.md-border-bottom
          md-tab(label="Inspect Data")
            md-content.md-padding
              h1.md-display-2 Inspect
              table
                tr(ng-repeat="row in parsedData")
                  td(ng-repeat="cell in row") {{cell}}
          md-tab(label="Analyze Data")
            md-content.md-padding
              h1.md-display-2 Analyze
              a(href) Run Analysis
          md-tab(label="Load New Data")
            md-content.md-padding
              h1.md-display-2 Load Data
              p Place CSV formatted text into this box to load your data.
              textarea(ng-model="data")
    script(src='angular/angular.js')
    script(src='js/papaparse.min.js')
    script(src="/angular-aria/angular-aria.js")
    script(src="/angular-animate/angular-animate.js")
    script(src="/angular-material/angular-material.js")
    script(src='js/app.js')
    script(src='js/controllers.js')
