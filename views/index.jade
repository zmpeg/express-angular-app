doctype html
html(ng-app='csvApp')
  head
    meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no")
    link(rel="stylesheet" href="angular-material/angular-material.css")
  body(ng-controller="dataController")
    h1 CSV Explorer
    #app-tabs(ng-cloak)
      md-content
        md-tabs(md-dynamic-height md-border-bottom)
          md-tab(label="Load Data")
            md-content.md-padding
              h1.md-display-2 Load Data
              p Place CSV formatted text into this box to load your data.
              textarea(ng-model="data")
          md-tab(label="Inspect Data")
            md-content.md-padding
              h1.md-display-2 View Data
              p {{data}}
    script(src='angular/angular.js')
    script(src="/angular-aria/angular-aria.js")
    script(src="/angular-animate/angular-animate.js")
    script(src="/angular-material/angular-material.js")
    script(src='js/app.js')
    script(src='js/controllers.js')
